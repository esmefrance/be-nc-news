{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }},
  "GET /api/articles/:article_id":{
    "description": "serves an article by article ID",
    "queries": ["article_id"],
    "exampleResponse":{
      "article": 
        {
          "title": "Seafood substitution{s are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 2
        } 
  }},
"GET /api/articles/:article_id/comments/":{
"description": "serves all comments linked to one article ID",
    "queries": ["article_id"],
    "exampleResponse":{
      "comments": 
      {
        "comment_id": 3,
        "body": "I hate streaming noses",
        "votes": 0,
        "author": "icellusedkars",
        "article_id": 1,
        "created_at": "2024-02-16T16:09:47.547Z"
      }
  }
},

"POST /api/articles/:article_id/comments":{
  "description": "adds a  comment to a linked article ID",
      "queries": ["article_id", "username", "body"],
      "exampleResponse":{
        "comment": 
        {
          "comment_id": 19,
          "body": "Laptops are useful!",
          "article_id": 2,
          "author": "rogersop",
          "votes": 0,
          "created_at": "2024-07-16T16:09:47.547Z"
        }
    }
  },
  "PATCH /api/articles/:article_id/":{
  "description": "updates the vote count on an article",
      "queries": ["article_id", "vote_inc"],
      "exampleResponse":{
        "comment": 
        {
          "comment_id": 19,
          "body": "Laptops are useful!",
          "article_id": 2,
          "author": "rogersop",
          "votes": 10 ,
          "created_at": "2024-07-16T16:09:47.547Z"
        }
    }
  },
"DELETE /api/comments/:comment_id/":{
  "description": "deletes a comment by comment_id",
      "queries": ["comment_id"],
      "exampleResponse":{}
  },
"GET /api/users/":{
  "description": "deletes a comment by comment_id",
      "queries": [],
      "exampleResponse":{
        "users":
        {
          "username": "butter_bridge",
          "name": "jonny",
          "avatar_url":
            "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
        }
      }
}
}

